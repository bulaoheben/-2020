<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.back.mapper.SysUserMapper">

    <resultMap id="BaseResultMap" type="com.example.back.entity.SysUser">
        <result column="ID" jdbcType="INTEGER" property="ID" />
        <result column="UserName" jdbcType="VARCHAR" property="UserName" />
        <result column="Password" jdbcType="VARCHAR" property="Password" />
        <result column="REAL_NAME" jdbcType="VARCHAR" property="REAL_NAME" />
        <result column="SEX" jdbcType="VARCHAR" property="SEX" />
        <result column="EMAIL" jdbcType="VARCHAR" property="EMAIL" />
        <result column="PHONE" jdbcType="VARCHAR" property="PHONE" />
        <result column="MOBILE" jdbcType="VARCHAR" property="MOBILE" />
        <result column="CREATED" jdbcType="VARCHAR" property="CREATED" />
        <result column="UPDATED" jdbcType="VARCHAR" property="UPDATED" />
        <result column="logoimage" jdbcType="VARCHAR" property="logoimage" />
    </resultMap>


    <select id="Login" resultType="com.example.back.entity.SysUser">
        select * from sys_user where UserName=#{UserName} and Password=#{Password}
    </select>

    <insert id="/er">
        insert into sys_user (UserName,Password,REAL_NAME,SEX,EMAIL,PHONE,MOBILE,CREATED) values (#{UserName},#{Password},#{REAL_NAME},#{SEX},#{EMAIL},#{PHONE},#{MOBILE},#{CREATED})
    </insert>

    <update id="updateadmininfo">
        update sys_user set UserName=#{UserName},REAL_NAME=#{REAL_NAME},SEX=#{SEX},EMAIL=#{EMAIL},PHONE=#{PHONE},MOBILE=#{MOBILE},logoimage=#{logoimage},UPDATED=#{UPDATED} where ID=#{ID}
    </update>

    <update id="updateadminpassword">
        update sys_user set Password=#{Password} where ID=#{ID}
    </update>

    <select id="getid" resultType="java.lang.Integer">
        select ID from sys_user where UserName=#{UserName} and Password=#{Password}
    </select>

    <select id="get" resultType="com.example.back.entity.SysUser">
        select * from sys_user where ID=#{ID}
    </select>

</mapper>