<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.back.mapper.OlderPersonMapper">

    <resultMap id="BaseResultMap" type="com.example.back.entity.OlderPerson">
        <result column="ID" jdbcType="INTEGER" property="ID" />
        <result column="username" jdbcType="VARCHAR" property="username" />
        <result column="gender" jdbcType="VARCHAR" property="gender" />
        <result column="phone" jdbcType="VARCHAR" property="phone" />
        <result column="id_card" jdbcType="VARCHAR" property="id_card" />
        <result column="birthday" jdbcType="VARCHAR" property="birthday" />
        <result column="checkin_date" jdbcType="VARCHAR" property="checkin_date" />
        <result column="checkout_date" jdbcType="VARCHAR" property="checkout_date" />
        <result column="imgset_dir" jdbcType="VARCHAR" property="imgset_dir" />
        <result column="profile_photo" jdbcType="VARCHAR" property="profile_photo" />
        <result column="room_number" jdbcType="VARCHAR" property="room_number" />
        <result column="CREATED" jdbcType="VARCHAR" property="CREATED" />
        <result column="UPDATED" jdbcType="VARCHAR" property="UPDATED" />
    </resultMap>


    <insert id="addOlderInfo">
        insert into oldperson_info (ID,username,gender,phone,id_card,birthday,checkin_date,checkout_date,profile_photo,room_number,CREATED)
        values (#{ID},#{username},#{gender},#{phone},#{id_card},#{birthday},#{checkin_date},#{checkout_date},#{profile_photo},#{room_number},#{CREATED})
    </insert>

    <select id="getOlderInfo"  resultType="com.example.back.entity.OlderPerson">
        select * from oldperson_info where ID=#{ID}
    </select>

    <select id="getalloldmaninfo"  resultType="com.example.back.entity.OlderPerson">
        select * from oldperson_info
    </select>

    <update id="updateOldmanInfo">
        update oldperson_info set username=#{username},gender=#{gender},phone=#{phone},id_card=#{id_card},birthday=#{birthday},checkin_date=#{checkin_date},checkout_date=#{checkout_date},profile_photo=#{profile_photo},room_number=#{room_number},UPDATED=#{UPDATED} where ID=#{ID}
    </update>
    
    <delete id="deleteoldmaninfo">
        delete from oldperson_info where ID=#{ID}
    </delete>

    <insert id="insertEvent">
        insert into event_info values (null,#{event_type},#{event_date},#{event_location},#{event_desc},null,#{snapshot})
    </insert>

    <insert id="insertOldEvent">
        insert into event_info values (null,#{event_type},#{event_date},#{event_location},#{event_desc},#{oldperson_id},#{snapshot})
    </insert>

    <update id="autoSetTag">
        update oldperson_info set imgset_dir=#{imgset_dir},profile_photo=#{profile_photo} where ID=#{ID}
    </update>

    <update id="setTag">
        update oldperson_info set profile_photo=#{profile_photo} where ID=#{ID}
    </update>

    <select id="oldrecord" resultType="java.lang.String">
        select birthday from oldperson_info
    </select>

    <select id="getid" resultType="java.lang.Integer">
        select max(ID) from oldperson_info
    </select>

</mapper>